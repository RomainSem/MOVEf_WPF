<Window x:Class="MOVEf_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MOVEf_WPF"
        mc:Ignorable="d"
        Title="MOVEf" Height="476" Width="960">
    <Grid x:Name="pnlMainGrid" Drop="pnlMainGrid_Drop" DragEnter="pnlMainGrid_DragEnter" DragLeave="pnlMainGrid_DragLeave" AllowDrop="True" Background="#FF313338">
        <ListView Width="250" Height="50" ItemsSource="{Binding DroppedFilesPath}"/>
        <TextBlock x:Name="txt" TextWrapping="Wrap" VerticalAlignment="Center" Height="20" Width="300" HorizontalAlignment="Center" TextAlignment="Center" Background="#FF313338" Foreground="White" Text="Drag and drop files here" FontFamily="Corbel Light" FontSize="14"/>
        <Menu x:Name="mnu" VerticalAlignment="Top" Height="20"/>
    </Grid>
</Window>
